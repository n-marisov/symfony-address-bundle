<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Реализует собой точку на карте -->
    <entity name="Maris\Symfony\Address\Entity\Address" table="addresses" repository-class="Maris\Symfony\Address\Repository\AddressRepository" >

        <id name="id" type="integer" column="id">
            <generator/>
        </id>

        <field name="title" />

        <field name="unrestricted" />

        <field name="postal" length="6" nullable="true" />

        <field name="okato" length="11" nullable="true" />

        <field name="oktmo" length="11" nullable="true" />

        <field name="fias" length="36" nullable="true"/>

        <field name="kladr" length="19" nullable="true"/>

        <many-to-one field="location" target-entity="Maris\Symfony\Geo\Entity\Location">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
            <join-columns>
                <join-column name="location_id" />
            </join-columns>
        </many-to-one>

        <one-to-many field="components" target-entity="Maris\Symfony\Address\Entity\Component" mapped-by="address">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

    </entity>

</doctrine-mapping>