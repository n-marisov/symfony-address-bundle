<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Реализует собой точку на карте -->
    <entity name="Maris\Symfony\Address\Entity\Address" table="addresses" repository-class="Maris\Symfony\Address\Repository\AddressRepository" >

        <id name="id" type="integer" column="id">
            <generator/>
        </id>

        <field name="title" />

        <field name="unrestricted" />

        <field name="postal" length="6" nullable="true" />

        <field name="okato" length="11" nullable="true" />

        <field name="oktmo" length="11" nullable="true" />

        <field name="fias" length="36" nullable="true"/>

        <field name="kladr" length="19" nullable="true"/>

        <embedded name="location" column-prefix="geo_" class="Maris\Symfony\Geo\Embeddable\Model\Entity\Location" />


        <embedded name="country" class="Maris\Symfony\Address\Entity\Country" />
        <embedded name="federalDistrict" class="Maris\Symfony\Address\Entity\FederalDistrict"/>
        <embedded name="region" class="Maris\Symfony\Address\Entity\Region"/>
        <embedded name="area" class="Maris\Symfony\Address\Entity\Area"/>
        <embedded name="subArea" class="Maris\Symfony\Address\Entity\SubArea"/>
        <embedded name="city" class="Maris\Symfony\Address\Entity\City"/>
        <embedded name="cityDistrict" class="Maris\Symfony\Address\Entity\CityDistrict"/>
        <embedded name="settlement" class="Maris\Symfony\Address\Entity\Settlement"/>
        <embedded name="stead" class="Maris\Symfony\Address\Entity\Stead"/>
        <embedded name="street" class="Maris\Symfony\Address\Entity\Street"/>
        <embedded name="house" class="Maris\Symfony\Address\Entity\House"/>
        <embedded name="block" class="Maris\Symfony\Address\Entity\Block"/>
        <embedded name="room" class="Maris\Symfony\Address\Entity\Room"/>
        <embedded name="flat" class="Maris\Symfony\Address\Entity\Flat"/>




        <!--<one-to-many field="components" target-entity="Maris\Symfony\Address\Entity\Component" mapped-by="address">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>-->

    </entity>

</doctrine-mapping>