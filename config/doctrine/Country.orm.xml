<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Реализует собой страну -->
    <embeddable name="Maris\Symfony\Address\Entity\Country" repository-class="Maris\Symfony\Address\Repository\ComponentRepository">

        <!-- Двух-символьный ISO-код страны -->
        <field name="iso" column="_iso_code" length="2" nullable="true"/>

    </embeddable>

</doctrine-mapping>